@page
@model WebAppStudies.Pages.PageHandlersModel
@{
    ViewData["Title"] = "Study PageHandlers";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]

<!-- Page page-handlers -->
<div class="container px-4 py-4" id="page-handlers">
    <h2 class="pb-2 border-bottom">Test to Fire Page Handlers</h2>

    <p>Click below to fire the corresponing handlers in the model</p>
    <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">

        <div class="col-md-7 col-lg-8">
            <span class="alert alert-info" role="alert">
                @Model.Message
            </span>
        </div>

        <div class="col-md-7 col-lg-8">
            <a href="~/Studies/Model/PageHandlers?idGet=@Guid.NewGuid()" class="w-100 btn btn-primary btn-lg my-1">Fire Get</a>
        </div>
        <div class="col-md-7 col-lg-8">
            <form method="post" class="needs-validation" novalidate>

                <input type="hidden" name="id" value="@Guid.NewGuid()" />
                <button class="w-100 btn btn-primary btn-lg my-1" type="submit">Fire Post</button>
            </form>
        </div>
        <div class="col-md-7 col-lg-8">
            <form asp-page-handler="edit" method="post" class="needs-validation" novalidate>

                <input type="hidden" name="id" value="@Guid.NewGuid()" />
                <button class="w-100 btn btn-primary btn-lg my-1" type="submit">Fire PostEdit</button>
            </form>
        </div>
        <div class="col-md-7 col-lg-8">
            <form asp-page-handler="delete" method="post" class="needs-validation" novalidate>

                <input type="hidden" name="id" value="@Guid.NewGuid()" />
                <button class="w-100 btn btn-primary btn-lg my-1" type="submit">Fire PostDelete</button>
            </form>
        </div>
        <div class="col-md-7 col-lg-8">
            <form asp-page-handler="view" method="post" class="needs-validation" novalidate>

                <input type="hidden" name="name" value="Hello" />
                <input type="hidden" name="vid" value="@Guid.NewGuid()" />
                <button class="w-100 btn btn-primary btn-lg my-1" type="submit">Fire PostView</button>
            </form>
        </div>
    </div>
</div>

